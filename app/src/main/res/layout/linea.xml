<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#cfd8e7">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >

        <ImageView
            android:id="@+id/item_sexo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/femenino"
            />

        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_nombre"
                android:layout_width="130dp"
                android:layout_height="27dp"
                android:text="@string/item_nombre"
                android:textColor="#52536a"
                />

            <TextView
                 android:id="@+id/item_telefono"
                 android:layout_width="130dp"
                android:layout_height="19dp"
                 android:text="@string/item_telefono"
                 android:textColor="#52536a"/>

        </LinearLayout>


        <ImageButton
            android:id="@+id/item_call"
            style="@android:style/Widget.ImageButton"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:background="#f7c0c3"
            app:srcCompat="@android:drawable/ic_menu_call"/>


        <ImageButton
            android:id="@+id/item_delete"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:background="#f7c0c3"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"/>



    </LinearLayout>
</LinearLayout>