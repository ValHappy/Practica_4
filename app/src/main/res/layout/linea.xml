<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#cfd8e7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_nombre"
        android:layout_width="217dp"
        android:layout_height="27dp"
        android:text="@string/item_nombre"
        android:textColor="#52536a"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/item_telefono"
        android:layout_width="181dp"
        android:layout_height="19dp"
        android:text="@string/item_telefono"
        android:textColor="#52536a"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="50dp" />

    <ImageButton
        android:id="@+id/item_call"
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:background="#f7c0c3"
        app:srcCompat="@android:drawable/ic_menu_call"
        tools:layout_editor_absoluteX="281dp"
        tools:layout_editor_absoluteY="25dp" />

    <ImageButton
        android:id="@+id/item_delete"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:background="#f7c0c3"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        tools:layout_editor_absoluteX="327dp"
        tools:layout_editor_absoluteY="25dp" />
</android.support.constraint.ConstraintLayout>